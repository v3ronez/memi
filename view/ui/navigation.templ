package ui

import "github.com/v3ronez/memi/utils"
import "strings"

templ Navigation() {
	<div class="navbar bg-base-100 border-b border-b-gray-600">
		<div class="flex-1">
			<a class="btn btn-ghost text-xl text-primary">Memi</a>
		</div>
		<div class="flex-none">
			<ul class="menu menu-horizontal px-1 mx-5">
				if utils.GetUserFromCtx(ctx) != nil {
					<li><a>Profile</a></li>
					<li><a>Store</a></li>
					<li>
						<details>
							<summary>{ strings.ToLower(utils.GetUserFromCtx(ctx).Email) }</summary>
							<ul class="bg-base-100 rounded-t-none p-2">
								<li><a>Profile</a></li>
								<li><a>Logout</a></li>
							</ul>
						</details>
					</li>
				} else {
					<a class="btn btn-primary">Login</a>
				}
			</ul>
		</div>
	</div>
}
